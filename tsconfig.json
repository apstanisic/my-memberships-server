{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
